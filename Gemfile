source 'https://rubygems.org'

# GitHub Pages specific gems
gem 'github-pages', group: :jekyll_plugins

# Jekyll plugins compatible with GitHub Pages
group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'jekyll-remote-theme'  # For using remote themes
end

# Additional gems for local development
gem 'webrick', '~> 1.8'
